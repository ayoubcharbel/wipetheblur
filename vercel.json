{
  "version": 2,
  "builds": [
    {
      "src": "bot.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "bot.js"
    }
  ],
  "functions": {
    "bot.js": {
      "maxDuration": 30
    },
    "api/telegram-webhook.js": {
      "maxDuration": 30
    },
    "api/setup-webhook.js": {
      "maxDuration": 30
    },
    "api/webhook-status.js": {
      "maxDuration": 30
    },
    "api/bot-status.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/telegram-webhook",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}