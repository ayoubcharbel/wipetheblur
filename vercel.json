{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    }
  ],
  "functions": {
    "api/telegram-webhook.js": {
      "maxDuration": 30
    },
    "api/setup-webhook.js": {
      "maxDuration": 30
    },
    "api/webhook-status.js": {
      "maxDuration": 30
    },
    "api/bot-status.js": {
      "maxDuration": 30
    },
    "api/bot-admin.js": {
      "maxDuration": 30
    },
    "api/data-store.js": {
      "maxDuration": 30
    },
    "api/test-activity.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}